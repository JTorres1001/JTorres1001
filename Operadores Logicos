    var num1 = parseFloat(prompt("Ingrese el 1er número: "))
    var num2 = parseFloat(prompt("Ingrese el 2do número: "))
    mensaje = ""

    if(num1 > num2){
        mensaje = "El número "+ num1+ " es mayor que el número " + num2
    }else if (num1 == num2){
        mensaje = "Los números son iguales: " + num1
    }else{
        mensaje = "El número "+ num2+ " es mayor que el número " + num1
    }
